<div class="container">
	<div class="row">
		<div class="col-xs-12 player-name">
			<%= @name %>
		</div>
	</div>
	<form
		action="/players/<%= @name %>/comments"
		method="post"
	>
	<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
		<div class="row comment-page-row">
			<div class="col-sm-2">
				<div class="btn-group" data-toggle="buttons" id="thumb-button-group" role="group" aria-label="thumbs">
					<label class="btn btn-primary btn-success active">
						<input type="radio" name="rating" value="1" id="option1" autocomplete="off" checked> 
						<span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>
					</label>
					<label class="btn btn-primary btn-danger">
						<input type="radio" name="rating" value="0" id="option2" autocomplete="off">
						<span class="glyphicon glyphicon-thumbs-down" aria-hidden="true"></span>
					</label>
				</div>
			</div>
			<div class="col-sm-10">
				<input name="comment" type="text" class="form-control" id="comment-box" placeholder="Comment" aria-describedby="basic-addon1">		
			</div>
		</div>
		<div class="row comment-page-row">
			<div class="col-xs-6 col-sm-3">
				<input type="text" name="author" class="form-control" placeholder="your CFN id" aria-describedby="basic-addon1">
			</div>
			<div class="col-xs-6 col-sm-3">
				<input type="text" name="tripcode" id="tripcode-input" class="form-control" placeholder="tripcode password" aria-describedby="basic-addon1">
				<a href="http://www.lurkmore.com/view/Tripcode" target="_blank">
					<span class="glyphicon glyphicon-question-sign" aria-hidden="true"></span>
				</a>
			</div>
		</div>
		<div class="row comment-page-row">
			<div class="col-xs-12">
				<div class="g-recaptcha" data-sitekey="6LciGxsTAAAAAGTKlQTM2t0Beh-PmNwK2KI7MF_8"></div>
			</div>
		</div>	
		<div class="row comment-page-row">
			<div class="col-xs-12 col-sm-2">
				<button type="submit" id="comment-submit-button" class="btn btn-default">Submit</button>
			</div>
		</div>
	</form>
</div>